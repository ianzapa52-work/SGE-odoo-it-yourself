<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_izl_peluqueria_empleado_tree" model="ir.ui.view">
        <field name="name">izl_peluqueria.empleado.tree</field>
        <field name="model">izl_peluqueria.empleado</field>
        <field name="arch" type="xml">
            <tree>
                <field name="nombre"/>
                <field name="apellido"/>
                <field name="especialidad"/>
            </tree>
        </field>
    </record>

    <record id="view_izl_peluqueria_empleado_form" model="ir.ui.view">
        <field name="name">izl_peluqueria.empleado.form</field>
        <field name="model">izl_peluqueria.empleado</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="nombre"/>
                        <field name="apellido"/>
                        <field name="telefono"/>
                        <field name="email"/>
                        <field name="especialidad"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
