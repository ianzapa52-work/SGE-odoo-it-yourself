<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_izl_peluqueria_cliente_tree" model="ir.ui.view">
        <field name="name">izl_peluqueria.cliente.tree</field>
        <field name="model">izl_peluqueria.cliente</field>
        <field name="arch" type="xml">
            <tree>
                <field name="nombre"/>
                <field name="apellido"/>
                <field name="telefono"/>
                <field name="email"/>
                <field name="total_citas"/>
            </tree>
        </field>
    </record>

    <record id="view_izl_peluqueria_cliente_form" model="ir.ui.view">
        <field name="name">izl_peluqueria.cliente.form</field>
        <field name="model">izl_peluqueria.cliente</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="%(cliente_report)d"
                            string="Imprimir Informe"
                            type="action"
                            class="btn-primary"/>

                    <button name="action_ver_citas"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-calendar"
                            string=" Citas">
                        <field name="total_citas" widget="statinfo"/>
                    </button>
                </header>
                <sheet>
                    <group>
                        <field name="image_1920" widget="image"/>
                    </group>
                    <group>
                        <field name="nombre"/>
                        <field name="apellido"/>
                        <field name="telefono"/>
                        <field name="email"/>
                        <field name="fecha_nacimiento"/>
                        <field name="total_citas" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Citas">
                            <field name="cita_ids">
                                <tree>
                                    <field name="fecha"/>
                                    <field name="servicio_id"/>
                                    <field name="empleado_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                    <field name="activity_ids" widget="mail_activity"/>
                </div>

            </form>
        </field>
    </record>
</odoo>
