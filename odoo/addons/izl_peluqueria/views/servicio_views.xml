<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_izl_peluqueria_servicio_tree" model="ir.ui.view">
        <field name="name">izl_peluqueria.servicio.tree</field>
        <field name="model">izl_peluqueria.servicio</field>
        <field name="arch" type="xml">
            <tree>
                <field name="nombre"/>
                <field name="precio"/>
            </tree>
        </field>
    </record>

    <record id="view_izl_peluqueria_servicio_form" model="ir.ui.view">
        <field name="name">izl_peluqueria.servicio.form</field>
        <field name="model">izl_peluqueria.servicio</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="nombre"/>
                        <field name="descripcion"/>
                        <field name="precio"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
