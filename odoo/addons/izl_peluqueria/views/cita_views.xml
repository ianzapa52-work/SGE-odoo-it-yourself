<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_izl_peluqueria_cita_tree" model="ir.ui.view">
        <field name="name">izl_peluqueria.cita.tree</field>
        <field name="model">izl_peluqueria.cita</field>
        <field name="arch" type="xml">
            <tree>
                <field name="codigo"/>
                <field name="cliente_id"/>
                <field name="servicio_id"/>
                <field name="empleado_id"/>
                <field name="fecha"/>
            </tree>
        </field>
    </record>

    <record id="view_izl_peluqueria_cita_form" model="ir.ui.view">
        <field name="name">izl_peluqueria.cita.form</field>
        <field name="model">izl_peluqueria.cita</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="codigo" readonly="1"/>
                        <field name="cliente_id"/>
                        <field name="servicio_id"/>
                        <field name="empleado_id"/>
                        <field name="fecha"/>
                        <field name="nota"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_izl_peluqueria_cita_calendar" model="ir.ui.view">
        <field name="name">izl_peluqueria.cita.calendar</field>
        <field name="model">izl_peluqueria.cita</field>
        <field name="arch" type="xml">
            <calendar string="Calendario de Citas" date_start="fecha">
                <field name="cliente_id"/>
                <field name="servicio_id"/>
                <field name="empleado_id"/>
            </calendar>
        </field>
    </record>

    <record id="view_izl_peluqueria_cita_graph" model="ir.ui.view">
        <field name="name">izl_peluqueria.cita.graph</field>
        <field name="model">izl_peluqueria.cita</field>
        <field name="arch" type="xml">
            <graph string="Citas por Empleado" type="bar">
                <field name="empleado_id" type="row"/>
                <field name="id" type="measure"/>
            </graph>
        </field>
    </record>

</odoo>
