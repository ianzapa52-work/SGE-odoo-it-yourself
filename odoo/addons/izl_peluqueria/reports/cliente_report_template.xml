<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="izl_peluqueria.cliente_report_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <main class="page">
                    <t t-foreach="docs" t-as="doc">

                        <img t-att-src="'/web/image/izl_peluqueria.cliente/%s/image_1920' % doc.id"
                             style="max-height: 80px; margin-bottom: 20px;"/>

                        <h2>Ficha del Cliente</h2>

                        <p><strong>Nombre:</strong> <t t-esc="doc.nombre"/></p>

                        <h3>Citas del Cliente</h3>

                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Fecha</th>
                                    <th>Servicio</th>
                                    <th>Empleado</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.cita_ids" t-as="cita">
                                    <tr>
                                        <td><t t-esc="cita.fecha"/></td>
                                        <td><t t-esc="cita.servicio_id.nombre"/></td>
                                        <td><t t-esc="cita.empleado_id.nombre"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                    </t>
                </main>
            </t>
        </t>
    </template>

</odoo>
